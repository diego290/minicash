                                        	<li><a href="{{ logout }}">{{ text_logout }}</a></li>
                                        	{% endif %} 
                                        </ul>
							</div>
							
							<!-- Header Center -->
							<div class="col-sm-4" id="header-center">		
							     {% if (logo) %} 
