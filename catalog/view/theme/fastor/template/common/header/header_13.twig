						          <div class="logo"><a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" /></a></div>
						     </div>
						     {% endif %} 
						     
							<!-- Header Left -->
							<div class="col-sm-5" id="header-center">
                                        
								{% set menu9 = theme_options.getModules('menu') %}
								{% if ( menu9|length > 0 ) %} 
